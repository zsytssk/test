{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "watch": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "none",
    "moduleResolution": "node"
  },
  "include": ["src", "typings"]
}
