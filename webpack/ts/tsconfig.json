{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "sourceMap": true,
        "watch": true,
        "baseUrl": "./",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*", "libs/*"]
        }
    },
    "include": ["src", "libs", "test"]
}
